<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_meddle">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是头部"
        android:textColor="@color/text"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_created_at"
            android:textColor="@color/light_grey" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/video_clicks_count"
            android:textColor="@color/light_grey" />

    </LinearLayout>

    <!--标签流-->
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        app:max_select="-1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:layout_marginBottom="@dimen/padding_meddle"
        android:orientation="horizontal">

        <include layout="@layout/fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_like"
            android:drawablePadding="@dimen/padding_meddle"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/light_grey" />

        <include layout="@layout/fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_like"
            android:drawablePadding="@dimen/padding_meddle"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/light_grey" />

        <include layout="@layout/fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_like"
            android:drawablePadding="@dimen/padding_meddle"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/light_grey" />

        <include layout="@layout/fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_like"
            android:drawablePadding="@dimen/padding_meddle"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/light_grey" />

        <include layout="@layout/fill" />

    </LinearLayout>

    <include layout="@layout/divider_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_meddle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/avatar_width_meddle"
            android:layout_height="@dimen/avatar_width_meddle"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_meddle"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="@color/text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:background="@drawable/selector_color_primary"
            android:text="+关注"
            android:textColor="@drawable/selector_text_color_primary_reverse" />

    </LinearLayout>

</LinearLayout>