<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!--这部分是主界面内容-->
    <include layout="@layout/app_bar_home" />

    <!--这部分是侧滑内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--用户布局-->
                <include layout="@layout/user_info" />

                <include layout="@layout/divider_small" />

                <!--item-->
                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_code" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/scan" />
                </LinearLayout>

                <include layout="@layout/divider_meddle" />

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_message" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer"
                    android:id="@+id/ll_friend">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_friend" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer"
                    android:id="@+id/ll_fans">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_fans" />
                </LinearLayout>

                <include layout="@layout/divider_meddle" />

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/shop" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_order" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/my_new_order" />
                </LinearLayout>

                <include layout="@layout/divider_meddle" />

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/online_music_free" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/nearby" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/theme" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/recognition_music" />
                </LinearLayout>

                <LinearLayout style="@style/ItemContainer">

                    <ImageView style="@style/ItemIcon" />

                    <TextView
                        style="@style/ItemText"
                        android:text="@string/time_stop" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <include layout="@layout/divider_small" />


        <!--顶部按钮容器-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height">

            <!--按钮容器-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView style="@style/ItemIcon" />

                <!--文本-->
                <TextView
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@string/night_model"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--按钮容器-->
            <LinearLayout
                android:id="@+id/ll_setting"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView style="@style/ItemIcon" />

                <!--文本-->
                <TextView
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@string/setting"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--按钮容器-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView style="@style/ItemIcon" />

                <!--文本-->
                <TextView
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@string/logout"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>